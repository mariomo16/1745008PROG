Algoritmo ejercicio4
	
	Escribir "Introduce cantidad:";
	Leer cantidad;
	
	Escribir "Introduce complemento:";
	Leer complemento;
	
	sueldo = (cantidad * complemento / 100 + cantidad);
	
	Escribir "El sueldo base es de " , cantidad , " euros";
	Escribir "El complemento es del " , complemento , "%";
	Escribir "El sueldo final es de " , sueldo , " euros";
	
FinAlgoritmo